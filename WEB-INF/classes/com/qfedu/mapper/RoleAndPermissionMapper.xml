<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qfedu.mapper.RoleAndPermissionMapper">
    <insert id="addRoleAndPermission">

       insert into t_role_permission (roleid,permissionid) values (#{roleid},#{permissionid})
    </insert>
    <delete id="deleteRoleAndPermission">
        delete from t_role_permission where roleid =#{roleid}
    </delete>
</mapper>
